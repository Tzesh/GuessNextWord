<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane fx:id="mainPanel" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.anadolu.gui.GUI">
    <children>
        <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Host a Server">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="355.0" prefWidth="573.0">
                            <children>
                                <TextField id="serverIP" fx:id="serverIP" layoutX="14.0" layoutY="14.0" promptText="Server IP" />
                                <TextField id="serverPort" fx:id="serverPort" layoutX="14.0" layoutY="47.0" promptText="Server Port" />
                                <Button fx:id="hostButton" layoutX="68.0" layoutY="82.0" mnemonicParsing="false" onAction="#hostServer" text="Host" />
                                <TextFlow fx:id="hostPanel" layoutX="176.0" layoutY="15.0" prefHeight="344.0" prefWidth="413.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Join a Server">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="joinIP" layoutX="14.0" layoutY="14.0" promptText="Server IP" />
                                <TextField fx:id="joinPort" layoutX="14.0" layoutY="45.0" promptText="Server Port" />
                                <Button layoutX="70.0" layoutY="79.0" mnemonicParsing="false" onAction="#joinServer" text="Join" />
                                <TextFlow fx:id="userPanel" layoutX="173.0" layoutY="14.0" prefHeight="349.0" prefWidth="420.0" />
                            </children></AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
